{
 "triggerTemplate": {
 "projectId": "${PROJECT}",
 "repoName": "default",
 "tagName": ".*"
 },
 "description": "tag",
 "substitutions": {
 "_CLOUDSDK_COMPUTE_ZONE": "${ZONE}",
 "_CLOUDSDK_CONTAINER_CLUSTER": "${CLUSTER}"
 },
 "filename": "builder/cloudbuild-prod.yaml"
}
EOF
curl -X POST \\
<https://cloudbuild.googleapis.com/v1/projects/${PROJECT}/triggers> \\ -H "Content-Type: application/json" \\
-H "Authorization: Bearer $(gcloud config config-helper --
format='value(credential.access_token)')" \\ --data-binary @tag-build-trigger.json
